@model IEnumerable<ECommerceShoppingCartAppASPNET7.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h3>Products List</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@(Math.Round(product.Price, 2))</td>
                <td><img src="~/images/@product.Photo" width="60" /></td>
                <td>
                    <input type="number" min="1" value="@product.Quantity" id="quantity-@product.Id" />
                </td>
                <td align="center">
                    <button class="add-to-cart" data-product-id="@product.Id" data-added="false">
                        Add to Cart
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-controller="Cart" asp-action="Index" method="get">
    <button type="submit" class="btn btn-primary">Show Cart</button>
</form>

@section Scripts {
    <script src="~/js/cart.js"></script>
}
